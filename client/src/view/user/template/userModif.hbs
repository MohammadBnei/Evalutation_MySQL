<div class="container-fluid user-region">
    <div class="card">
        <form id="modif-form">
            <div class="card-body">
                <h5 class="card-title">
                    <input class="form-control form-control-lg" type="text" placeholder="E-mail" name="email" value="{{email}}" required>
                </h5>
                <input class="form-control" type="text" placeholder="Name" name="name" value="{{name}}" required>
                <input class="form-control" type="text" placeholder="Surname" name="surname" value="{{surname}}" required>
            </div>
            <div class="row card-footer text-muted">
                <div class="col align-self-start" >
                    <button type="submit" id="save-button" class="btn btn-success">Save</button>
                    <button type="button" id="cancel-button" class="btn btn-secondary">Cancel</button>
                </div>
                <div class="col align-self-center text-right align-middle h-100 d-inline-block">
                    Created : {{userCreatedTime}}
                </div>
            </div>
        </form>
    </div>
</div>